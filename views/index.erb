<body data-spy="scroll">
	<div class="navbar navbar-static-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="brand" href="/"><span class="first">Where Should I</span><span class="second"> Visit Next?</span></a>
			</div>
		</div>
	</div>
	
	
    <div id="body" class="container">
    	<div class="row-fluid">
			<div id="content">
				<div class="row-fluid">
                    <div class="table-responsive">
                        <% if @valid %>
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @results.each do |result| %>
                                <tr>
                                    <td><%= result["city"] %></td>
                                    <td><%= result["state"] %></td>
                                    <td>$<%= result["price"] %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                        <% else %>
                        <h3>An error occured! Please try again later.</h3>
                        <% end %>
                      </div>
				</div>
			</div>
    	</div>
	</div>
